<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="As Quiz" Height="358.034" Width="490.574" Background="#FF1139EE" BorderBrush="#FFD41C1C" Foreground="#FFEE1C1C">
    <Grid Cursor="Arrow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="244*"/>
            <ColumnDefinition Width="144*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFC54747" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Quit" Margin="8,285,11.934,0" VerticalAlignment="Top" Click="Button_Click" Grid.Column="2" Height="32" Foreground="#FF2A342A" BorderThickness="1" Cursor="Hand" FontSize="20">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF269E52" Offset="0.27"/>
                    <GradientStop Color="#FF2323CD" Offset="1"/>
                    <GradientStop Color="#FF319BE4" Offset="0.83"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Ein AS Quiz der Superlative" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Width="283" Foreground="#FFFBF7F7" Grid.Column="1" Height="36" FontSize="22" Grid.ColumnSpan="2"/>
        <Calendar HorizontalAlignment="Left" Margin="28,111,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="168" Width="179" FontSize="18" RenderTransformOrigin="0.5,0.5" Grid.Row="8">
            <Calendar.Effect>
                <DropShadowEffect ShadowDepth="8" Color="#FFA08E8E"/>
            </Calendar.Effect>
            <Calendar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-7"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Calendar.RenderTransform>
            <Calendar.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4EAF0"/>
                    <GradientStop Color="#FFECF0F4" Offset="0.293"/>
                    <GradientStop Color="#FFFCFCFD" Offset="0.52"/>
                    <GradientStop Color="#FFF3A1A1" Offset="1"/>
                </LinearGradientBrush>
            </Calendar.Background>
        </Calendar>
        <Button Content="Press to start" Grid.Column="2" Margin="8,122,7,0" VerticalAlignment="Top" Background="#FFA49928" FontSize="20" Height="38" Cursor="Hand" FontFamily="Tw Cen MT Condensed Extra Bold" Click="Button_Click_1">
            <Button.Effect>
                <DropShadowEffect Color="#FF211313"/>
            </Button.Effect>
        </Button>
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Height="24" Margin="10,182,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="124" TextChanged="TextBox_TextChanged" FontSize="14"/>
        <Label Content="Username:" Grid.Column="1" HorizontalAlignment="Left" Margin="159,176,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFF7EDED"/>

    </Grid>
</Window>
